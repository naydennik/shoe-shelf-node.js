{{#if isLogged}}
{{#if shoes}}
<div class="shoes">
    {{#each shoes}}
    <div class="shoe">
        <img src={{imageUrl}}>
        <h3>{{name}}</h3>
        <a href="/shoes/details/{{_id}}">Buy it for ${{price}}</a>
    </div>
    {{/each}}
</div>
{{else}}

<h1>No shoes to display. Be the first to create a new offer...</h1>

{{/if}}
{{else}}
<div class="container">
    <div class="about-us">
        <div>
            <img src="/shoes.jpg" alt="">
            <img src="/shoes2.jpg" alt="">
        </div>
        <p>
            <a href="/users/register">Register Now</a> and Try it!
        </p>
    </div>
</div>


{{/if}}